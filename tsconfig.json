{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./typings",
    "outDir": "./dist",
    "importHelpers": true,
    "types": [
      "node",
      "reflect-metadata"
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
   ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}