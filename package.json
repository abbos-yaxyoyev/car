{
  "name": "nestjs-fastify",
  "version": "1.0.0",
  "description": "learn nestjs",
  "main": "main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev-user": "nodemon --exec ts-node -- --files ./src/user/main.ts",
    "dev-employee": "nodemon --exec ts-node -- --files ./src/employee/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'No e2e tests implemented yet.'"
  },
  "dependencies": {
    "@fastify/formbody": "^6.0.0",
    "@golevelup/nestjs-modules": "^0.6.1",
    "@nestjs/common": "8.2.3",
    "@nestjs/core": "8.2.3",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/mongoose": "^9.2.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-fastify": "^8.2.3",
    "@typegoose/typegoose": "^9.11.2",
    "@types/passport": "^1.0.10",
    "argon2": "^0.28.7",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.2",
    "dotenv": "^16.0.1",
    "mongoose": "^6.5.3",
    "nest-postgres": "0.0.3",
    "nodemon": "^2.0.19",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "^7.5.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.1",
    "@nestjs/schematics": "8.0.8",
    "@nestjs/testing": "8.2.3",
    "@types/express": "4.17.13",
    "@types/node": "^16.11.56",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "jest": "27.5.1",
    "prettier": "2.5.1",
    "supertest": "6.1.6",
    "ts-jest": "27.0.7",
    "ts-loader": "9.2.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "3.11.0",
    "typescript": "4.3.5"
  },
  "keywords": [
    "nestjs",
    "fastify_with_nestjs"
  ],
  "author": "abbos",
  "license": "ISC"
}
